<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|left"
    android:padding="10dp">
<ImageView
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:src="@drawable/money"
    android:scaleType="center"
    android:background="@drawable/btn_bg_radius"
    android:backgroundTint="#D9DBE4"
    />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#464749"
            android:text="Money Added"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#464749"
            android:textSize="14dp"
            android:text="From Paypal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:gravity="right"
        android:layout_gravity="center|end|right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#464749"
            android:text="+$150"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#464749"
            android:textSize="14dp"
            android:text="09:30 AM"/>
    </LinearLayout>


</LinearLayout>